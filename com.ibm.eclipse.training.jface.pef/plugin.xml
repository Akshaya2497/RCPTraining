<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.commands">
      <command
            defaultHandler="com.ibm.eclipse.training.jface.pef.handlers.DefaultCommandHandler"
            id="com.ibm.eclipse.training.jface.pef.commandwithmultiplehandlers"
            name="Command With Multiple Handlers">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="toolbar:org.eclipse.ui.main.toolbar">
         <toolbar
               id="com.ibm.eclipse.training.jface.pef.toolbar3">
            <command
                  commandId="com.ibm.eclipse.training.jface.pef.commandwithmultiplehandlers"
                  icon="icons/default.gif"
                  label="Command with multiple handlers"
                  style="push">
            </command>
         </toolbar>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="com.ibm.eclipse.training.jface.pef.handlers.SpecificCommandHandler"
            commandId="com.ibm.eclipse.training.jface.pef.commandwithmultiplehandlers">
         <activeWhen>
            <with
                  variable="selection">
               <count
                     value="1">
               </count>
            </with>
         </activeWhen>
      </handler>
      <handler
            class="com.ibm.eclipse.training.jface.pef.handlers.SpecificCommandHandler2"
            commandId="com.ibm.eclipse.training.jface.pef.commandwithmultiplehandlers">
         <activeWhen>
            <with
                  variable="selection">
               <count
                     value="2">
               </count>
               <iterate>
                  <and>
                     <instanceof
                           value="org.eclipse.core.resources.IFile">
                     </instanceof>
                     <adapt
                           type="org.eclipse.core.resources.IFile">
                        <test
                              property="org.eclipse.core.resources.extension"
                              value="myeditor">
                        </test>
                     </adapt>
                  </and>
               </iterate>
            </with>
         </activeWhen>
      </handler>
   </extension>

</plugin>
